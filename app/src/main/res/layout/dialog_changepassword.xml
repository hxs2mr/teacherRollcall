<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/borrow_dialog_shape"
    >

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:id="@+id/totoal"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="修改密码"
        android:textSize="20sp"
        android:textColor="#515151"
        />

    <TextView
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#515151"
        android:layout_below="@+id/totoal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        />
    <RelativeLayout
        android:id="@+id/r1"
        android:layout_below="@+id/t1"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/stu_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="原密码:"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:textColor="#6e6e6e"

            />
        <EditText
            android:layout_toRightOf="@+id/stu_number"
            android:layout_width="220dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="30dp"
            android:layout_height="40dp"
            android:hint="请输入"
            android:maxLines="1"
            android:paddingLeft="4dp"
            android:inputType="textPassword"
            android:background="@drawable/borrow_dialog_edittext"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/r2"
        android:layout_below="@+id/t1"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/stu_number2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="新密码:"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:textColor="#6e6e6e"
            />
        <EditText
            android:layout_toRightOf="@+id/stu_number2"
            android:layout_width="220dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="30dp"
            android:layout_height="40dp"
            android:hint="请输入"
            android:maxLines="1"
            android:paddingLeft="4dp"
            android:inputType="textPassword"
            android:background="@drawable/borrow_dialog_edittext"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r3"
        android:layout_below="@+id/t1"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/stu_number3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="确认新密码:"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:textColor="#6e6e6e"
            />
        <EditText
            android:layout_toRightOf="@+id/stu_number3"
            android:layout_width="220dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="30dp"
            android:layout_height="40dp"
            android:paddingLeft="4dp"
            android:maxLines="1"
            android:inputType="textPassword"
            android:background="@drawable/borrow_dialog_edittext"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/borrow_ok"
        android:layout_width="200dp"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:text="确认"
        android:layout_marginBottom="30dp"
        android:background="@drawable/borrow_dialog_ok"
        />

</LinearLayout>