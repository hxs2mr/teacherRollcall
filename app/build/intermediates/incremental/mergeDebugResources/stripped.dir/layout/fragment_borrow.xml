<?xml version="1.0" encoding="utf-8"?>

                                                           
                                                     

    

                 
                            
                                                                

           


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ffffff"
        android:orientation="vertical"
        android:gravity="center_horizontal" android:tag="layout/fragment_borrow_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:binding="http://schemas.android.com/apk/res-auto" xmlns:Binding="http://schemas.android.com/tools">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/color_efefef">
            
            
            <RelativeLayout
                android:id="@+id/re1"
                android:layout_toLeftOf="@+id/borrow_search_layout"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@drawable/icon_search_et_bg"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp">


                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/icon_search_normal"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"/>


                <EditText
                    android:id="@+id/ev_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="36dp"
                    android:background="@null"
                    android:hint="@string/please_input_name_or_number"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:imeOptions="actionSearch"
                    android:textColor="@color/color_333333"/>

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/borrow_search_layout"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp">
                <TextView
                    android:layout_width="56dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_search_et_bg"
                    android:gravity="center"
                    android:textColor="@color/color_5298fc"
                    android:tag="binding_1"                     
                    android:text="@string/search"/>
                <RelativeLayout
                    android:id="@+id/borrow_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/icon_register"
                        android:layout_marginLeft="66dp"
                        android:tag="binding_2"                       
                        android:scaleType="fitXY"
                        android:layout_centerVertical="true"/>


                    <TextView
                        style="@style/lay_loss_text_style"
                        android:tag="binding_3"                       
                        android:text="@string/borrow_register"
                        android:layout_marginLeft="96dp"/>

                </RelativeLayout>



            </RelativeLayout>

        </RelativeLayout>


        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refreshlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycleview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                binding:layoutManager="android.support.v7.widget.LinearLayoutManager"
                android:tag="binding_4"               
                />

        </android.support.v4.widget.SwipeRefreshLayout>




    </LinearLayout>

         