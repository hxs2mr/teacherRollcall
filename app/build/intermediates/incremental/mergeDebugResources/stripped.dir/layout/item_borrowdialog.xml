<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/borrow_dialog_shape"
    >
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:id="@+id/totoal"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="借用登记表"
        android:textSize="20sp"
        android:textColor="#515151"
        />

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#515151"
            android:layout_below="@+id/totoal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            />
    <RelativeLayout
        android:id="@+id/r1"
        android:layout_below="@+id/t1"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/stu_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="借用学生学号"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:textColor="#6e6e6e"
            />
        <EditText
            android:id="@+id/ev_stunum"
            android:layout_toRightOf="@+id/stu_number"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginRight="30dp"
            android:layout_height="40dp"
            android:hint="请输入"
            android:maxLines="1"
            android:paddingLeft="4dp"
            android:background="@drawable/borrow_dialog_edittext"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/r2"
        android:layout_below="@+id/r1"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/stu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="借用学生姓名"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:textColor="#6e6e6e"
            />
        <EditText
            android:id="@+id/ev_username"
            android:layout_toRightOf="@+id/stu_name"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginRight="30dp"
            android:layout_height="40dp"
            android:paddingLeft="4dp"
            android:maxLines="1"
            android:hint="请输入"
            android:background="@drawable/borrow_dialog_edittext"
            />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/r3"
        android:layout_below="@+id/r2"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/stu_address1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="学生所在宿舍"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:textColor="#6e6e6e"
            />
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_gravity="center|right"
            android:gravity="center|right"
            android:maxLines="1"
            android:textColor="#666666"
            android:hint="请选择"
            android:layout_marginRight="4dp"
            />
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/complint_xia_image"
            android:layout_width="12dp"
            android:layout_height="7dp"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:background="@mipmap/complaint_xia"
            />
    </LinearLayout>

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/linear_xia"
        android:layout_below="@+id/r3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f5f5f5"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
    </android.support.v7.widget.LinearLayoutCompat>
    <RelativeLayout
        android:id="@+id/r4"
        android:layout_below="@+id/linear_xia"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/stu_wu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="   物品与数量"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:textColor="#6e6e6e"
            />
        <EditText
            android:id="@+id/stu_wu"
            android:layout_toRightOf="@+id/stu_wu1"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginRight="30dp"
            android:gravity="top"
            android:layout_height="100dp"
            android:paddingLeft="4dp"
            android:hint="例如钥匙两把"
            android:maxLines="3"
            android:background="@drawable/borrow_dialog_edittext"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/r4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"
        >
        <Button
            android:id="@+id/borrow_ok"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:text="确认"
            android:background="@drawable/borrow_dialog_ok"
            />
        <Button
            android:id="@+id/borrow_cancel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginLeft="60dp"
            android:text="取消"
            android:background="@drawable/borrow_dialog_cancle"
            />
    </LinearLayout>
</RelativeLayout>