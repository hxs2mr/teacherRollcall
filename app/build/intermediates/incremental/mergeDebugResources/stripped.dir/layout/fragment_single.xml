<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                            

    

                 
                            
                                                                       

           


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ffffff"
        android:orientation="vertical"
        android:gravity="center_horizontal" android:tag="layout/fragment_single_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:binding="http://schemas.android.com/apk/res-auto">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="26dp"
           android:layout_marginRight="44dp"
           android:layout_marginLeft="44dp"
           android:tag="binding_1"                          
           android:layout_marginTop="20dp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/start_date"
               android:textSize="13sp"
               android:textStyle="bold"
               android:textColor="@color/color_515151"
               android:layout_centerVertical="true"
               android:gravity="end"
               android:paddingRight="10dp"/>
           <TextView
               android:id="@+id/tv_date"
               android:layout_width="170dp"
               android:paddingLeft="10dp"
               android:layout_height="match_parent"
               android:gravity="center_vertical"
               android:textSize="13sp"
               android:textStyle="bold"
               android:hint="请选择"
               android:tag="binding_2"           
               android:layout_marginLeft="60dp"
               android:textColor="@color/color_808080"
               android:layout_centerVertical="true" />

           <ImageView
               android:layout_centerHorizontal="true"
               android:layout_centerVertical="true"
               android:layout_toRightOf="@+id/tv_date"
               android:layout_width="15dp"
               android:layout_height="15dp"
               android:background="@mipmap/icon_right"
               />


       </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginRight="44dp"
            android:layout_marginLeft="44dp"
            android:tag="binding_3"                          
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_time"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/color_515151"
                android:layout_centerVertical="true"
                android:gravity="end"
                android:paddingRight="10dp"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="170dp"
                android:paddingLeft="10dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="13sp"
                android:textStyle="bold"
                android:hint="请选择"
                android:tag="binding_4"           
                android:layout_marginLeft="60dp"
                android:textColor="@color/color_808080"
                android:layout_centerVertical="true" />
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_time"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@mipmap/icon_right"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginRight="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/call_range"
                android:textColor="@color/color_515151"
                android:layout_centerVertical="true"
                android:gravity="end"
                android:textSize="13sp"
                android:textStyle="bold"
                android:paddingRight="10dp"/>

            <CheckBox
                android:id="@+id/checkbox_all"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_toLeftOf="@+id/single_total_tv"
                android:layout_marginRight="6dp"
                android:checked="true"
                android:tag="binding_5"                                              />


            <TextView
                android:id="@+id/single_total_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@color/color_515151"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="@string/total_select"/>


        </RelativeLayout>


        <ImageView
            style="@style/lay_divide_line_e5e5e5_horizontal"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             >
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="44dp"
                android:layout_marginRight="44dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                binding:layoutManager="android.support.v7.widget.GridLayoutManager"
                binding:spanCount="4"
                android:tag="binding_6"               
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_certain_btn_bg"
                    android:gravity="center"
                    android:textColor="@color/color_ffffff"
                    android:textSize="12sp"
                    android:tag="binding_7"                             
                    android:text="@string/certain"/>


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_cancle_btn_bg"
                    android:gravity="center"
                    android:textColor="@color/color_ffffff"
                    android:textSize="12sp"
                    android:text="@string/cancle"
                    android:layout_alignParentRight="true"
                    android:tag="binding_8"                                 />

            </RelativeLayout>



        </FrameLayout>




    </LinearLayout>

         